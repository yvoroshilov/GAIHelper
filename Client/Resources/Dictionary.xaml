<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Client.Resources">
    <local:IndexOfConverter x:Key="IndexOfConverter" />
    <local:DateConverter x:Key="DateConverter" />
    <local:CoordConverter x:Key="CoordConverter" />
    <local:DescriptionConverter x:Key="DescriptionConverter" />
    <local:FloatConverter x:Key="FloatConverter" />


    <ControlTemplate x:Key="ValidationTemplate">
        <Grid>
            <Ellipse Margin="0,2,2,0" Fill="Red" Opacity="0.8" Width="10" Height="10"
                     HorizontalAlignment="Right" VerticalAlignment="Top"
                     ToolTip="{Binding Path=/ErrorContent}" />
            <AdornedElementPlaceholder />
        </Grid>
    </ControlTemplate>
</ResourceDictionary>